          "order": 6
        },
        {
          "input_type": "input_media",
          "input_format": "images",
          "input_name": "additional_images",
          "label": "Additional Images",
          "accepted_formats": ["jpg", "jpeg", "png", "webp"],
          "max_count": 6,
          "order": 7
        },
        {
          "input_type": "input_selection",
          "input_format": "drop",
          "input_name": "status",
          "label": "Status",
          "count": 1,
          "options": ["Active", "Inactive", "Draft"],
          "order": 8
        }
      ]
    }
