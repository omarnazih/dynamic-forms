      "inputs": [
        {
          "input_type": "input_raw",
          "input_format": "text",
          "input_name": "product_name",
          "label": "Name",
          "max_length": 100,
          "order": 1
        },
        {
          "input_type": "input_selection",
          "input_format": "drop",
          "input_name": "product_category",
          "label": "Category",
          "count": 1,
          "options": ["Electronics", "Apparel", "Home", "Furniture", "Software", "Food", "Other"],
          "order": 2
        },
        {
          "input_type": "input_raw",
          "input_format": "text",
          "input_name": "brand",
          "label": "Brand",
          "max_length": 50,
          "order": 3
        },
        {
          "input_type": "input_raw",
          "input_format": "textarea",
          "input_name": "description",
          "label": "Description",
          "max_length": 1000,
          "order": 4
        },
        {
          "input_type": "input_raw",
          "input_format": "text",
          "input_name": "short_description",
          "label": "Short Description",
          "max_length": 200,
          "order": 5
        },
        {
          "input_type": "input_raw",
          "input_format": "number",
          "input_name": "price",
          "label": "Price",
          "order": 6
        },
        {
          "input_type": "input_raw",
          "input_format": "number",
          "input_name": "discount_price",
          "label": "Discount Price",
          "order": 7
        },
        {
          "input_type": "input_selection",
          "input_format": "drop",
          "input_name": "currency",
          "label": "Currency",
          "count": 1,
          "options": ["USD", "EUR", "GBP", "L.L", "SAR", "AED"],
          "order": 8
        },
        {
          "input_type": "input_raw",
          "input_format": "number",
          "input_name": "stock_quantity",
          "label": "Stock Quantity",
          "order": 9
        },
        {
          "input_type": "input_selection",
          "input_format": "drop",
          "input_name": "unit",
          "label": "Unit of Measurement",
          "count": 1,
          "options": ["piece", "kg", "liter", "set", "box"],
          "order": 10
        },
        {
          "input_type": "input_raw",
          "input_format": "text",
          "input_name": "sku",
          "label": "SKU",
          "order": 11
        }
      ]
    },
    {
      "step_name": "product_details",
      "inputs": [
        {
          "input_type": "input_raw",
          "input_format": "number",
          "input_name": "weight",
          "label": "Weight (kg)",
          "order": 1
        },
        {
          "input_type": "input_raw",
          "input_format": "dimension",
          "input_name": "dimensions",
          "label": "Dimensions (L×W×H)",
          "order": 2
        },
        {
          "input_type": "input_selection",
          "input_format": "multi_text",
          "input_name": "color_options",
          "label": "Color Options",
          "count": 5,
          "order": 3
        },
        {
          "input_type": "input_selection",
          "input_format": "multi_text",
          "input_name": "size_options",
          "label": "Size Options",
          "count": 5,
          "order": 4
        },
        {
          "input_type": "input_raw",
          "input_format": "text",
          "input_name": "tags",
          "label": "Tags / Keywords",
          "max_length": 200,
